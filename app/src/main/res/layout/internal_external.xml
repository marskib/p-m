<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">


    <Button
        android:id="@+id/bInternal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="pamięć urządzenia"
        android:onClick="bInternalClick"
        android:textSize="@dimen/btn_zrodlo_text_rozmiar"
        android:paddingBottom="15dp"/>


    <Button
        android:id="@+id/bExternal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="zawnętrzna karta SD"
        android:onClick="bExternalClick"
        android:textSize="@dimen/btn_zrodlo_text_rozmiar"
        android:paddingBottom="15dp"/>
</LinearLayout>